{
  "name": "kanel",
  "keywords": [
    "postgresql",
    "schema",
    "typescript"
  ],
  "author": {
    "name": "Kristian Dupont",
    "url": "http://www.kristiandupont.com"
  },
  "repository": "git@github.com:kristiandupont/kanel.git",
  "license": "MIT",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "version": "0.2.3",
  "bin": {
    "kanel": "./bin/kanel"
  },
  "scripts": {
    "build": "tsc",
    "version": "yarn build",
    "start-example-db": "docker run -d --name dvd-rental -p 54321:5432 kristiandupont/dvdrental-image",
    "run-example": "node build/src/cli -c ./example/.kanelrc",
    "stop-example-db": "docker stop dvd-rental"
  },
  "dependencies": {
    "@kristiandupont/recase": "^1.1.0",
    "chalk": "^3.0.0",
    "extract-pg-schema": "^1.4.0",
    "knex": "^0.20.9",
    "optionator": "^0.8.3",
    "pg": "^7.18.2",
    "ramda": "^0.27.0",
    "rmfr": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/knex": "^0.16.1",
    "@types/node": "^13.7.1",
    "@types/ramda": "^0.27.7",
    "eslint": "^7.4.0",
    "jest": "^26.1.0",
    "np": "^6.3.0",
    "pg": "^8.2.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  },
  "files": [
    "build/",
    "bin/"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts|js)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "testEnvironment": "node"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "np": {
    "tests": false
  }
}
